<Window x:Class="MovieList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieList"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">
    <StackPanel Margin="10,10,10,10">
        <TextBlock x:Name="MovieTitle" TextWrapping="Wrap" Text="Title:" Margin="0,5,0,0"/>
        <TextBox x:Name="TitleInput" Height="23" TextWrapping="Wrap" Text="" TextChanged="TitleInput_TextChanged"/>
        <TextBlock x:Name="ReleaseYear" TextWrapping="Wrap" Text="Release Year:" Margin="0,5,0,0"/>
        <TextBox x:Name="ReleaseYearInput" Height="23" TextWrapping="Wrap" Text="" TextChanged="ReleaseYearInput_TextChanged"/>
        <Button x:Name="AddMovie" Content="Add Movie" Click="AddMovie_Click" Margin="0,5" Width="125"/>
        <Button x:Name ="ShowAllButton" Content="Show All Movies" Margin="0,5" Width="150" Click="ShowAllButton_Click"/>
    </StackPanel>
</Window>
